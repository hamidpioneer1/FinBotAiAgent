{
  "ConnectionStrings": {
    "PostgreSql": "Host=localhost;Username=postgres;Password=dev_password;Database=finbotdb"
  },
  "Security": {
    "ApiKey": "dev-api-key-12345",
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:8080",
      "https://localhost:8080"
    ],
    "RequireHttps": false,
    "RateLimitRequestsPerMinute": 1000,
    "RateLimitBurstSize": 50
  },
  "ExternalKeyManagement": {
    "Enabled": false,
    "KeySource": "Environment",
    "KeyFilePath": "./secrets/api-key.txt",
    "CacheExpirationMinutes": 1,
    "FallbackApiKey": "dev-fallback-key"
  },
  "OAuth": {
    "Enabled": true,
    "Authority": "http://localhost:8080",
    "Audience": "finbotaiagent-api-dev",
    "Issuer": "finbotaiagent-oauth-dev",
    "SecretKey": "dev-jwt-secret-key-12345",
    "TokenExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 7,
    "AllowedScopes": ["api.read", "api.write"],
    "RequireHttps": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
