{
  "ConnectionStrings": {
    "PostgreSql": "Host=localhost;Username=postgres;Password=your_password;Database=finbotdb"
  },
  "Security": {
    "ApiKey": "your-secure-api-key-here-change-in-production",
    "AllowedOrigins": [
      "https://copilotstudio.microsoft.com",
      "https://make.powerapps.com",
      "https://flow.microsoft.com"
    ],
    "RequireHttps": true,
    "RateLimitRequestsPerMinute": 100,
    "RateLimitBurstSize": 10
  },
  "ExternalKeyManagement": {
    "Enabled": false,
    "KeySource": "Environment",
    "KeyFilePath": "/app/secrets/api-key.txt",
    "CacheExpirationMinutes": 5,
    "FallbackApiKey": "fallback-key-for-emergency"
  },
  "OAuth": {
    "Enabled": false,
    "Authority": "https://your-oauth-authority.com",
    "Audience": "finbotaiagent-api",
    "Issuer": "finbotaiagent-oauth",
    "SecretKey": "your-jwt-secret-key-change-in-production",
    "TokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 30,
    "AllowedScopes": ["api.read", "api.write"],
    "RequireHttps": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
